User Function zTListBox()
    
Local oDlg1       // 1        2         3           4       5               6  
Local aOpcoes := {"Feliz","Animado","Euforico","Triste","Pensativo","Codificando"}
Local nOpcao  := 1 // Variável usada para controlar a posição que o objeto Lista está selecionado, ele guarda o que foi selecionado
Local oListBox
Local oButton1

oDlg1  := TDialog():New(0,0,500,500,'Painel de OpÃ§Ãµes',,,,,CLR_BLACK,CLR_WHITE,,,.T.)

oListBox := TListBox():New(010,010,{|u| IIF(PCount()>0,nOpcao := u,nOpcao)},aOpcoes,60,100,,oDlg1,,,,.T.)

oListBox:bChange := {||MsgInfo("Mudou para o item -> " +aOpcoes[nOpcao], "Atenção ")}

oButton1 := TButton():New(10,100,"Hoje você está",oDlg1,{||MsgInfo(aOpcoes[nOpcao],"Conteudo Digitado")},60,15,,,.F.,.T.,.F.,,.F.,,,.F.)


oDlg1:Activate(,,,.T.)
    
Return 
